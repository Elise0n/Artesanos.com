extends ./partials/layout.pug

block content
  h1.mb-4 Registro de Usuario

  form(method="POST", action="/registro", class="card p-4 shadow-sm mx-auto", style="max-width:500px;")
    .mb-3
      label.form-label(for="nombre") Nombre
      input.form-control(type="text", name="nombre", required)

    .mb-3
      label.form-label(for="email") Email
      input.form-control(type="email", name="email", required)

    .mb-3
      label.form-label(for="contraseña") Contraseña
      input.form-control(type="password", name="contraseña", required minlength="6")

    button.btn.btn-primary(type="submit") Registrarse