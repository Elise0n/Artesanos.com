doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Artesanos.com
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/css/estilos.css")

  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.mb-4
      .container-fluid
        a.navbar-brand(href="/") Artesanos.com
        button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
          span.navbar-toggler-icon
        .collapse.navbar-collapse#navbarNav
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link(href="/usuarios") Usuarios
            li.nav-item
              a.nav-link(href="/login") Login
            li.nav-item
              a.nav-link(href="/registrar") Registro
            li.nav-item
              a.nav-link(href="/logout") Cerrar sesión

    .container
      block content

    footer.bg-primary.text-white.text-center.py-3.mt-5
      .container
        span.me-2 &copy; 2025 Artesanos.com
        span.me-2 | Hecho con ❤️ para la comunidad
        a.text-white.ms-2(href="https://github.com/Elise0n/Artesanos.com" target="_blank") GitHub

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
